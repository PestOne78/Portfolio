<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:orientation="vertical"
    android:gravity="start">

    <TextView
        android:id="@+id/txtMessageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/txtMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:paddingTop="12dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/txtMessageBody"
        android:layout_alignBaseline="@+id/txtMessageBody"
        tools:text="11:40" />

    <TextView
        android:id="@+id/txtMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/message_body"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        tools:text="hi man, how are you?"
        android:layout_below="@+id/txtMessageName"/>


</RelativeLayout>